  "compilerOptions": {
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "./www",
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": true,
    "target": "ES2015"
  },
  "exclude": ["node_modules/**/*"],
  "include": ["frontend/**/*.ts"]
}
